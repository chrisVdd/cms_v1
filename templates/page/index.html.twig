{% extends 'base.html.twig' %}

{% block title %}Page index{% endblock %}

{% block body %}
    <h1>Page index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>SubTitle</th>
                <th>Content</th>
                <th>CreateDate</th>
                <th>UpdateDate</th>
                <th>Online</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for page in pages %}
            <tr>
                <td>{{ page.id }}</td>
                <td>{{ page.title }}</td>
                <td>{{ page.subTitle }}</td>
                <td>{{ page.content }}</td>
                <td>{{ page.createDate ? page.createDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ page.updateDate ? page.updateDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ page.online ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('page_show', {'id': page.id}) }}">show</a>
                    <a href="{{ path('page_edit', {'id': page.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('page_new') }}">Create new</a>
{% endblock %}
