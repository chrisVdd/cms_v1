{% extends 'base.html.twig' %}

{% block title %}Template{% endblock %}

{% block body %}
    <h1>Template</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ template.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ template.name }}</td>
            </tr>
            <tr>
                <th>Filename</th>
                <td>{{ template.filename }}</td>
            </tr>
            <tr>
                <th>CreateDate</th>
                <td>{{ template.createDate ? template.createDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdateDate</th>
                <td>{{ template.updateDate ? template.updateDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('template_index') }}">back to list</a>

    <a href="{{ path('template_edit', {'id': template.id}) }}">edit</a>

    {{ include('template/_delete_form.html.twig') }}
{% endblock %}
