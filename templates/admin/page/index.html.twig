{% extends 'admin/base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('admin-datatables') }}
{% endblock %}

{% block title %}Page index{% endblock %}

{% block body %}

    <main class="main-content flex-1 bg-gray-100 mt-12 md:mt-2 pb-24 md:pb-5">
        {{ include('admin/page/_page_title.html.twig') }}

{#        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">#}
{#            <h1 class="mt-4">Page index</h1>#}
{#            <a href="{{ path('admin_page_new') }}" class="btn btn-success">Create new</a>#}
{#        </div>#}

{#        <ol class="breadcrumb mb-4">#}
{#            <li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>#}
{#            <li class="breadcrumb-item active">Tables</li>#}
{#        </ol>#}

        <main>
            <div class="max-w-7xl py-6 sm:px-6 lg:px-12">
                <table id="dataTable" class="stripe hover" style="width:100%; padding-top: 1em;  padding-bottom: 1em;">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Content</th>
                        <th>CreateDate</th>
                        <th>UpdateDate</th>
                        <th>Online</th>
                        <th>Postion</th>
                        <th>ACTIONS</th>
                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Content</th>
                        <th>CreateDate</th>
                        <th>UpdateDate</th>
                        <th>Online</th>
                        <th>Postion</th>
                        <th>ACTIONS</th>
                    </tr>
                    </tfoot>
                    <tbody>
                    {% for page in pages %}
                        <tr>
                            <td>{{ page.id }}</td>
                            <td>{{ page.title }}</td>
                            <td>
                                <a href="" data-toggle="modal" data-target="#viewContentModal">View content</a>
                                <div class="modal fade" id="viewContentModal" tabindex="-1"
                                     aria-labelledby="viewContentModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="viewContentModalLabel">View content</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                {{ page.content|html_entity_decode|raw }}
                                            </div>
                                            {# <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                <button type="button" class="btn btn-primary">Save changes</button>
                                            </div> #}
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td>{{ page.createDate ? page.createDate|date('Y-m-d H:i:s') : '' }}</td>
                            <td>{{ page.updateDate ? page.updateDate|date('Y-m-d H:i:s') : '' }}</td>
                            <td>
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">

                                </span>

                                {% if page.online == 1 %}
                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                                        Yes
                                    </span>
                                {% else %}
                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                                        No
                                    </span>
                                {% endif %}
{#                                    {{ page.online ? 'Yes' : 'No' }}#}
                            </td>
                            <td>{{ page.position }}</td>
                            <td>
                                <a href="{{ path('admin_page_show', {'id': page.id}) }}" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                                    show
                                </a>
                                <a href="{{ path('admin_page_edit', {'id': page.id}) }}">edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </main>
    </main>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('admin-datatables') }}
{% endblock %}