{% extends 'admin/base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('admin-datatables') }}
{% endblock %}

{% block title %}Page index{% endblock %}

{% block body %}

    {#    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">#}
    {#        <h1 class="mt-4">Users index</h1>#}
    {#        <a href="{{ path('admin_user_new') }}" class="btn btn-success">Create a new</a>#}
    {#    </div>#}

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Library</li>
        </ol>
    </nav>

    <div class="card">
            <div class="card-body">
                <table class="table table-striped table-bordered" id="dataTable">
                    <thead class="justify-between">
                        <tr class="dark-blue-bg">
                            <th>
                                <span>ID</span>
                            </th>
                            <th>
                                <span>Title</span>
                            </th>
                            <th>
                                <span>Content</span>
                            </th>
                            <th>
                                <span>CreateDate</span>
                            </th>
                            <th>
                                <span>UpdateDate</span>
                            </th>
                            <th>
                                <span>Online</span>
                            <th>
                                <span>Postion</span>
                            </th>
                            <th>
                                <span>ACTIONS</span>
                            </th>
                        </tr>
                    </thead>
                    <tfoot class="justify-between">
                        <tr class="dark-blue-bg">
                            <th>
                                <span>ID</span>
                            </th>
                            <th>
                                <span>Title</span>
                            </th>
                            <th>
                                <span>Content</span>
                            </th>
                            <th>
                                <span>CreateDate</span>
                            </th>
                            <th>
                                <span>UpdateDate</span>
                            </th>
                            <th>
                                <span>Online</span>
                            </th>
                            <th>
                                <span>Postion</span>
                            </th>
                            <th>
                                <span>ACTIONS</span>
                            </th>
                        </tr>
                    </tfoot>

                    <tbody>
                        {% for page in pages %}
                            <tr>
                                <td># {{ page.id }}</td>
                                <td>{{ page.title }}</td>
                                <td>
                                    <a href="" data-toggle="modal" data-target="#viewContentModal">
                                        View content
                                    </a>

                                    <div class="modal fade" id="viewContentModal" tabindex="-1"
                                         aria-labelledby="viewContentModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="viewContentModalLabel">View content</h5>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    {{ page.content|html_entity_decode|raw }}
                                                </div>
                                                {# <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                    <button type="button" class="btn btn-primary">Save changes</button>
                                                </div> #}
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td>{{ page.createDate ? page.createDate|date('Y-m-d H:i:s') : '' }}</td>
                                <td>{{ page.updateDate ? page.updateDate|date('Y-m-d H:i:s') : '' }}</td>
                                <td>
{#                                    <div class="material-switch pull-right">#}
{#                                        {% if page.online == 1 %}#}
{#                                            <input id="someSwitchOptionSuccess" name="someSwitchOption001" type="checkbox" />#}
{#                                            <label for="someSwitchOptionSuccess" class="label-success"></label>#}
{#                                        {% else %}#}
{#                                            <input id="someSwitchOptionDanger" name="someSwitchOption001" type="checkbox" />#}
{#                                            <label for="someSwitchOptionDanger" class="label-success"></label>#}
{#                                        {% endif %}#}
{#                                    </div>#}
                                    {{ page.online ? 'Yes' : 'No' }}
                                </td>
                                <td>{{ page.position }}</td>
                                <td>
                                    <a href="{{ path('admin_page_show', {'id': page.id}) }}" class="btn btn-primary">
                                        show
                                    </a>
                                    <a href="{{ path('admin_page_edit', {'id': page.id}) }}" class="btn btn-success">
                                        edit
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="8">no records found</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('admin-datatables') }}
{% endblock %}