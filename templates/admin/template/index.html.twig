{% extends 'admin/base.html.twig' %}


{% block title %}Template index{% endblock %}

{% block body %}
    <h1>Template index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Filename</th>
                <th>CreateDate</th>
                <th>UpdateDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for template in templates %}
            <tr>
                <td>{{ template.id }}</td>
                <td>{{ template.name }}</td>
                <td>{{ template.filename }}</td>
                <td>{{ template.createDate ? template.createDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ template.updateDate ? template.updateDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('template_show', {'id': template.id}) }}">show</a>
                    <a href="{{ path('template_edit', {'id': template.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('template_new') }}">Create new</a>
{% endblock %}
