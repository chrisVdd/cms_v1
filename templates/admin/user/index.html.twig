    <div>
        <table class="min-w-full table-auto border-gray-800" id="dataTable">
            <thead class="justify-between">
                <tr class="bg-gray-800">
                    <th class="px-16 py-2">
                        <span class="text-gray-300"> ID</span>
                    </th>
                    <th class="px-16 py-2">
                        <span class="text-gray-300"> Email</span>
                    </th>
                    <th class="px-16 py-2">
                        <span class="text-gray-300"> Username</span>
                    </th>
                    <th class="px-16 py-2">
                        <span class="text-gray-300"> Roles</span>
                    </th>
                    <th class="px-16 py-2">
                        <span class="text-gray-300"> actions</span>
                    </th>
                </tr>
            </thead>
            <tfoot class="justify-between">
                <tr class="bg-gray-800">
                    <th class="px-16 py-2">
                        <span class="text-gray-300"> ID</span>
                    </th>
                    <th class="px-16 py-2">
                        <span class="text-gray-300"> Email</span>
                    </th>
                    <th class="px-16 py-2">
                        <span class="text-gray-300"> Username</span>
                    </th>
                    <th class="px-16 py-2">
                        <span class="text-gray-300"> Roles</span>
                    </th>
                    <th class="px-16 py-2">
                        <span class="text-gray-300"> actions</span>
                    </th>
                </tr>
            </tfoot>

            <tbody class="bg-gray-200">
                {% for user in users %}
                    <tr class="bg-white border-4 border-gray-200">
                        <td class="px-16 "># {{ user.id }}</td>
                        <td class="px-16 ">{{ user.email }}</td>
                        <td class="px-16 ">{{ user.username }}</td>
                        <td class="px-16 ">{{ user.roles ? user.roles|json_encode : '' }}</td>
                        <td class="px-16 ">
                            <a href="{{ path('admin_user_show', {'id': user.id}) }}" class="bg-indigo-500 text-white px-4 py-2 border rounded-md hover:bg-white hover:border-indigo-500 hover:text-black">
                                show
                            </a>
                            <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="bg-indigo-500 text-white px-4 py-2 border rounded-md hover:bg-white hover:border-indigo-500 hover:text-black">
                                edit
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">no records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

