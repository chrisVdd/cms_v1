{% extends 'admin/base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('admin-datatables') }}
{% endblock %}

{% block title %}Users listing{% endblock %}

{% block body %}

{#    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">#}
{#        <h1 class="mt-4">Users index</h1>#}
{#        <a href="{{ path('admin_user_new') }}" class="btn btn-success">Create a new</a>#}
{#    </div>#}

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Library</li>
        </ol>
    </nav>

    <div class="card">
        <div class="card-body">
            <table class="table table-striped table-bordered" id="dataTable">
            <thead class="justify-between">
                <tr class="dark-blue-bg">
                    <th>
                        <span> ID</span>
                    </th>
                    <th>
                        <span> Email</span>
                    </th>
                    <th>
                        <span> Username</span>
                    </th>
                    <th>
                        <span> Roles</span>
                    </th>
                    <th>
                        <span> ACTIONS</span>
                    </th>
                </tr>
            </thead>
            <tfoot class="justify-between">
                <tr class="dark-blue-bg">
                    <th>
                        <span> ID</span>
                    </th>
                    <th>
                        <span> Email</span>
                    </th>
                    <th>
                        <span> Username</span>
                    </th>
                    <th>
                        <span> Roles</span>
                    </th>
                    <th>
                        <span> ACTIONS</span>
                    </th>
                </tr>
            </tfoot>

            <tbody>
                {% for user in users %}
                    <tr>
                        <td># {{ user.id }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.username }}</td>
                        <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                        <td>
                            <a href="{{ path('admin_user_show', {'id': user.id}) }}" class="btn btn-primary">
                                show
                            </a>
                            <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn btn-success">
                                edit
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">no records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('admin-datatables') }}
{% endblock %}