{% extends 'admin/base.html.twig' %}

{% block title %}Page{% endblock %}

{% block body %}
    <h1>Comment</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ comment.text }}</td>
            </tr>
            <tr>
                <th>CreateDate</th>
                <td>{{ comment.createDate ? comment.createDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdateDate</th>
                <td>{{ comment.updateDate ? comment.updateDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>State</th>
                <td>{{ comment.state }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_comment_index') }}">back to list</a>

    <a href="{{ path('admin_comment_edit', {'id': comment.id}) }}">edit</a>

    {{ include('admin/comment/_delete_form.html.twig') }}
{% endblock %}
